{
    "scopeName": "source.fracture",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#decorators"
        },
        {
            "include": "#operators"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.fracture",
                    "match": "//.*$"
                },
                {
                    "name": "comment.line.number-sign.fracture",
                    "match": "#.*$"
                },
                {
                    "name": "comment.block.fracture",
                    "begin": "/\\*",
                    "end": "\\*/"
                },
                {
                    "name": "comment.block.documentation.fracture",
                    "begin": "\"\"\"",
                    "end": "\"\"\""
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.fracture",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.fracture",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.fracture",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.fracture",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.triple.fracture",
                    "begin": "'''",
                    "end": "'''"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.hex.fracture",
                    "match": "\\b0[xX][0-9a-fA-F]+\\b"
                },
                {
                    "name": "constant.numeric.binary.fracture",
                    "match": "\\b0[bB][01]+\\b"
                },
                {
                    "name": "constant.numeric.octal.fracture",
                    "match": "\\b0[oO][0-7]+\\b"
                },
                {
                    "name": "constant.numeric.float.fracture",
                    "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
                },
                {
                    "name": "constant.numeric.integer.fracture",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.fracture",
                    "match": "\\b(if|elif|else|while|for|return|match|break|continue|panic|pass|yield|raise|try|except|finally|with|assert)\\b"
                },
                {
                    "name": "keyword.other.fracture",
                    "match": "\\b(fn|def|let|var|const|mut|struct|class|mod|module|use|import|from|pub|public|private|protected|as|self|super|this|glyph|shard|type|trait|impl|interface|enum)\\b"
                },
                {
                    "name": "keyword.control.async.fracture",
                    "match": "\\b(async|await)\\b"
                },
                {
                    "name": "storage.modifier.fracture",
                    "match": "\\b(static|global|nonlocal|extern)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.primitive.fracture",
                    "match": "\\b(bool|int|i8|i16|i32|i64|u8|u16|u32|u64|float|f32|f64|string|str|char|void|any|None|null|undefined)\\b"
                },
                {
                    "name": "entity.name.type.fracture",
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
                },
                {
                    "name": "storage.type.generic.fracture",
                    "match": "<[^>]+>"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.fracture",
                    "match": "\\b(true|false|True|False)\\b"
                },
                {
                    "name": "constant.language.null.fracture",
                    "match": "\\b(None|null|nil|undefined)\\b"
                },
                {
                    "name": "constant.language.fracture",
                    "match": "\\b(Some|Ok|Err|Self)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.definition.fracture",
                    "match": "(?<=fn|def)\\s+([a-z_][a-zA-Z0-9_]*)"
                },
                {
                    "name": "entity.name.function.fracture",
                    "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                },
                {
                    "name": "support.function.macro.fracture",
                    "match": "\\b([a-z_][a-zA-Z0-9_]*!)\\s*(?=\\()"
                }
            ]
        },
        "decorators": {
            "patterns": [
                {
                    "name": "meta.decorator.fracture",
                    "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
                },
                {
                    "name": "meta.attribute.fracture",
                    "match": "#\\[[^\\]]+\\]"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arrow.fracture",
                    "match": "(->|=>|::)"
                },
                {
                    "name": "keyword.operator.comparison.fracture",
                    "match": "(==|!=|<=|>=|<|>)"
                },
                {
                    "name": "keyword.operator.assignment.fracture",
                    "match": "(=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=|:=)"
                },
                {
                    "name": "keyword.operator.logical.fracture",
                    "match": "(&&|\\|\\||!|and|or|not)"
                },
                {
                    "name": "keyword.operator.arithmetic.fracture",
                    "match": "(\\+|-|\\*|/|%|\\*\\*)"
                },
                {
                    "name": "keyword.operator.bitwise.fracture",
                    "match": "(&|\\||\\^|<<|>>|~)"
                },
                {
                    "name": "keyword.operator.other.fracture",
                    "match": "(\\.|\\.\\.\\.|\\?|@|:)"
                }
            ]
        }
    }
}
